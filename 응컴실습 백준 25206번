#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<string.h>
int main()
{
	float sum = 0, creditsum = 0;
	for (int i = 0; i < 20; i++) {
		char subname[50];
		float credit;
		char grade[3];

		scanf("%s %f %s", subname, &credit, grade);

		creditsum += credit;

		if (strcmp(grade, "A+") == 0) {
			sum += credit * 4.5;
		}
		else if (strcmp(grade, "A0") == 0) {
			sum += credit * 4.0;
		}
		else if (strcmp(grade, "B+") == 0) {
			sum += credit * 3.5;
		}
		else if (strcmp(grade, "B0") == 0) {
			sum += credit * 3.0;
		}
		else if (strcmp(grade, "C+") == 0) {
			sum += credit * 2.5;
		}
		else if (strcmp(grade, "C0") == 0) {
			sum += credit * 2.0;
		}
		else if (strcmp(grade, "D+") == 0) {
			sum += credit * 1.5;
		}
		else if (strcmp(grade, "D0") == 0) {
			sum += credit * 1.0;
		}
		else if (strcmp(grade, "F") == 0) {
			sum += credit * 0.0;
		}
		else if (strcmp(grade, "P") == 0) {
			creditsum -= credit;
		}
	}

	printf("%f", sum / creditsum);

	return 0;
}
